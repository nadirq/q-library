{% if books|length > 0 %}
    <div class="row">
        {% for book in books %}
            <div class="col s3 l3">
                <div class="card small hoverable">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="{{ book.photo | default('/images/empty-book.jpg') }}">
                    </div>
                    <div class="card-content">
                            <span class="card-title activator grey-text text-darken-4">{{ book.name }}<i
                                        class="material-icons right">more_vert</i></span>
                        <p><a href="{{ path('qlibrary_show', {id: book.id}) }}">More</a></p>
                    </div>
                    <div class="card-reveal">
                            <span class="card-title grey-text text-darken-4">{{ book.name }}<i
                                        class="material-icons right">close</i></span>
                        <p>{{ book.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    {{ emptyText }}
{% endif %}